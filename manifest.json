{
    "manifest_version": 3,
    "name": "Study Resource Keeper",
    "version": "1.0",
    "description": "Save and organize URLs of study resources and learning materials",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}
